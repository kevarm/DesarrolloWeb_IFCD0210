const mongoose = required('mongoose');

const DB_URI = 'mongodb://localhost:27017/Appweb'

module.exports = () => {

    mongoose.connect(DB_URI,
        {
            keepAlive: true,
            userNewUrlParse: true,
            useUnifiedTopology: true
        }
        ).then((() => {console.log('ConexiÃ³n correcta')})
        .catch((err)=>{
            console.log('DB:ERROR!!')})
        )
    }
    connect()
